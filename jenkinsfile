Pipeline {

    agent any

    Stages {

        Stage("compile file") {

            Steps {
                echo "compiling file"
                javac app.js
                javac test.js
            }
        }

        Stage("test file") {
            Steps {
               echo "code testing"
            }
        }

        Stage("build") {
           
            Steps {
                echo "project build"
                java app
                java test
            }
        }

    }

    Post {
        Always {
            echo "Job Complete Over The All Steps"
        }

        Success {
            echo "Job Completed Successfully"
        }

        Failure {
            echo "Job Fails!"
        }

    }

}