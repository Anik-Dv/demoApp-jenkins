pipeline {

    agent any

    stages {

        stage("compile file") {

            steps {
                echo "compiling file"
                javac app.js
                javac test.js
            }
        }

        stage("test file") {
            steps {
               echo "code testing"
            }
        }

        stage("build") {
           
            steps {
                echo "project build"
                java app
                java test
            }
        }

    }

    post {
        always {
            echo "Job Complete Over The All Steps"
        }

        success {
            echo "Job Completed Successfully"
        }

        failure {
            echo "Job Fails!"
        }

    }

}